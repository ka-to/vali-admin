extends layouts/_layout.pug

block variables
	- var activePage = 'ui-widgets';
	- var activeGroup = 'ui-elements';

block title
	title Widgets - Vali Admin

block content
	.app-title
		div
			h1
				i.fas.fa-archive
				|  Widgets
			p Widgets to interactively display data

		ul.app-breadcrumb.breadcrumb
			li.breadcrumb-item
				i.fas.fa-home.fa-lg
			li.breadcrumb-item
				| UI
			li.breadcrumb-item
				a(href='#') Widgets

	.row
		.col-md-3
			.widget-small.primary
				i.icon.fas.fa-users.fa-3x
				div.info
					h4 Users
					p
						b 5

		.col-md-3
			.widget-small.info
				i.icon.far.fa-thumbs-up.fa-3x
				div.info
					h4 Likes
					p
						b 25

		.col-md-3
			.widget-small.warning
				i.icon.far.fa-copy.fa-3x
				div.info
					h4 Uploades
					p
						b 10

		.col-md-3
			.widget-small.danger
				i.icon.fas.fa-star.fa-3x
				div.info
					h4 Stars
					p
						b 500

	.row
		.col-md-3
			.widget-small.primary.coloured-icon
				i.icon.fas.fa-users.fa-3x
				div.info
					h4 Users
					p
						b 5

		.col-md-3
			.widget-small.info.coloured-icon
				i.icon.far.fa-thumbs-up.fa-3x
				div.info
					h4 Likes
					p
						b 25

		.col-md-3
			.widget-small.warning.coloured-icon
				i.icon.far.fa-copy.fa-3x
				div.info
					h4 Uploades
					p
						b 10

		.col-md-3
			.widget-small.danger.coloured-icon
				i.icon.fas.fa-star.fa-3x
				div.info
					h4 Stars
					p
						b 500

	.row
		.col-md-6
			.tile
				h3.tile-title Chat
				.messanger
					.messages
						.message
							img(src="https://placeimg.com/48/48/people")
							p.info Hello there!
								br
								| Good Morning

						.message.me
							img(src="https://placeimg.com/48/48/people")
							p.info Hi
								br
								| Good Morning

						.message
							img(src="https://placeimg.com/48/48/people")
							p.info How are you?

						.message.me
							img(src="https://placeimg.com/48/48/people")
							p.info I'm Fine.

					.sender
						input(type="text",placeholder="Send Message")
						button.btn.btn-primary(type="button")
							i.fas.fa-lg.fa-fw.fa-paper-plane

		.col-md-6
			.tile
				h3.tile-title Vector Map
				.tile-body
					#demo-map(style="height: 400px")

block specific-js
	script(type='text/javascript', src="js/plugins/jquery.vmap.min.js")
	script(type='text/javascript', src="js/plugins/jquery.vmap.world.js")
	script(type='text/javascript', src="js/plugins/jquery.vmap.sampledata.js")
	script(type="text/javascript").
		$(document).ready(function(){

			var map = $('#demo-map');
			map.vectorMap({
				map: 'world_en',
				backgroundColor: '#fff',
				color: '#333',
				hoverOpacity: 0.7,
				selectedColor: '#666666',
				enableZoom: true,
				showTooltip: true,
				scaleColors: ['#C8EEFF', '#006491'],
				values: sample_data,
				normalizeFunction: 'polynomial'
			});
		});
