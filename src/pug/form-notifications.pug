extends layouts/_layout.pug

block variables
	- var activePage = 'form-notifications';
	- var activeGroup = 'forms';

block title
	title Form Notifications - Vali Admin

block content
	.app-title
		div
			h1
				i.far.fa-bell
				|  Form Notifications
			p Jquery Plugins to notify user status about some action.

		ul.app-breadcrumb.breadcrumb
			li.breadcrumb-item
				i.fas.fa-home.fa-lg
			li.breadcrumb-item
				a(href='#') Form Notifications

	.row
		.col-md-6
			.tile
				.tile-title-w-btn
						h3.title Bootstrap Notify
						p
							a.btn.btn-primary.icon-btn(href="http://bootstrap-notify.remabledesigns.com/",target="_blank")
								i.fas.fa-file
								| Docs
				.tile-body
					p This plugin can be used to notify user about status of some action which he has performed.
					h4 Demo
					a.btn.btn-info#demoNotify(href="#") Sample Notification

		.col-md-6
			.tile
				.tile-title-w-btn
						h3.title SweetAlert
						p
							a.btn.btn-primary.icon-btn(href="http://t4t5.github.io/sweetalert/",target="_blank")
								i.fas.fa-file
								| Docs
				.tile-body
					p This plugin can be used as the replacement of native javascript alert, confirm and prompt functions.
					h4 Demo
					a.btn.btn-info#demoSwal(href="#") Sample Alert

block specific-js
	script(type='text/javascript', src="js/plugins/bootstrap-notify.min.js")
	script(type='text/javascript', src="js/plugins/sweetalert2.min.js")
	script(type='text/javascript').
		$('#demoNotify').click(function(){
			$.notify({
				title: "Update Complete : ",
				message: "Something cool is just updated!",
				icon: 'fa fa-check' 
			},{
				type: "info"
			});
		});
		$('#demoSwal').click(function(){
			Swal.fire({
				title: 'Are you sure?',
				text: "You won't be able to revert this!",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: 'Yes, delete it!'
			}).then((result) => {
				if (result.value) {
					Swal.fire(
					'Deleted!',
					'Your file has been deleted.',
					'success'
					)
				}
			});
		});
